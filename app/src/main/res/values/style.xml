<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:padding">6sp</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:textColor">#DCB8B8</item>

    </style>
    <style name="titre" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="android:background">#9C7DD3</item>
        <item name="android:textColor">#B53636</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:radius">25dp</item>
    </style>
    
</resources>